# ðŸš€ V7 Web Podman ä¼˜åŒ–é•œåƒ
# å¤šé˜¶æ®µæž„å»º - ä¸“ä¸ºè½»é‡åŒ–å’Œæžè‡´æ€§èƒ½è®¾è®¡

# ===== ðŸ—ï¸ æž„å»ºé˜¶æ®µ =====
FROM node:18-alpine AS builder

# ðŸ“¦ å®‰è£…æž„å»ºä¾èµ–
RUN apk add --no-cache \
    git \
    python3 \
    make \
    g++ \
    && rm -rf /var/cache/apk/*

# ðŸ“ åˆ›å»ºå·¥ä½œç›®å½•
WORKDIR /build

# ðŸ“¦ å¤åˆ¶ä¾èµ–æ–‡ä»¶ï¼ˆåˆ©ç”¨Dockerå±‚ç¼“å­˜ï¼‰
COPY package.json package-lock.json ./

# ðŸ”¨ å®‰è£…ä¾èµ–ï¼ˆæž„å»ºçŽ¯å¢ƒéœ€è¦å…¨éƒ¨ä¾èµ–ï¼‰
RUN npm ci --no-audit --no-fund && \
    npm cache clean --force

# ðŸ“ å¤åˆ¶æºä»£ç 
COPY . .

# ðŸ—ï¸ æž„å»ºåº”ç”¨ç¨‹åº
RUN npm run build && \
    ls -la dist/ && \
    du -sh dist/

# ðŸ§¹ æ¸…ç†æž„å»ºç¼“å­˜
RUN rm -rf node_modules/.cache

# ===== ðŸŒ Nginxé…ç½®é˜¶æ®µ =====
FROM nginx:1.25-alpine AS nginx-config

# ðŸ”§ åˆ›å»ºä¼˜åŒ–çš„Nginxé…ç½®
RUN cat > /etc/nginx/nginx.conf << 'EOF'
# ðŸš€ V7 Web Nginx é…ç½® - Podman ä¼˜åŒ–ç‰ˆæœ¬
user nginx;
worker_processes auto;
worker_rlimit_nofile 65535;

error_log /var/log/nginx/error.log warn;
pid /var/run/nginx.pid;

events {
    worker_connections 1024;
    use epoll;
    multi_accept on;
}

http {
    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    # ðŸ“Š æ—¥å¿—æ ¼å¼
    log_format main '$remote_addr - $remote_user [$time_local] "$request" '
                    '$status $body_bytes_sent "$http_referer" '
                    '"$http_user_agent" "$http_x_forwarded_for"';

    access_log /var/log/nginx/access.log main;

    # ðŸš€ æ€§èƒ½ä¼˜åŒ–
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;
    client_max_body_size 16M;

    # ðŸ—œï¸ åŽ‹ç¼©é…ç½®
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types
        text/plain
        text/css
        text/xml
        text/javascript
        application/json
        application/javascript
        application/xml+rss
        application/atom+xml
        image/svg+xml;

    # ðŸ”’ å®‰å…¨å¤´
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;
    add_header Content-Security-Policy "default-src 'self' http: https: data: blob: 'unsafe-inline'" always;

    # ðŸ“ åŒ…å«ç«™ç‚¹é…ç½®
    include /etc/nginx/conf.d/*.conf;
}
EOF

# ðŸ”§ åˆ›å»ºç«™ç‚¹é…ç½®
RUN cat > /etc/nginx/conf.d/default.conf << 'EOF'
# ðŸŒ V7 Web ç«™ç‚¹é…ç½®
server {
    listen 80;
    server_name _;
    root /usr/share/nginx/html;
    index index.html;

    # ðŸ“Š è®¿é—®æ—¥å¿—
    access_log /var/log/nginx/access.log main;
    error_log /var/log/nginx/error.log warn;

    # ðŸ¥ å¥åº·æ£€æŸ¥ç«¯ç‚¹
    location /health {
        access_log off;
        return 200 "healthy\n";
        add_header Content-Type text/plain;
    }

    # ðŸŽ¯ SPAè·¯ç”±æ”¯æŒ
    location / {
        try_files $uri $uri/ /index.html;
        expires 1h;
        add_header Cache-Control "public, immutable";
    }

    # ðŸ“¦ é™æ€èµ„æºç¼“å­˜
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        try_files $uri =404;
    }

    # ðŸ”§ APIä»£ç†ï¼ˆå¦‚æžœéœ€è¦ï¼‰
    location /api/ {
        proxy_pass http://backend:3000/api/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        proxy_read_timeout 86400;
    }

    # ðŸ”’ å®‰å…¨é…ç½®
    location ~ /\. {
        deny all;
    }

    location ~ ~$ {
        deny all;
    }
}
EOF

# ===== ðŸƒ è¿è¡Œé˜¶æ®µ =====
FROM nginx:1.25-alpine AS runtime

# ðŸ“¦ å®‰è£…è¿è¡Œæ—¶ä¾èµ–
RUN apk add --no-cache \
    curl \
    tzdata \
    && rm -rf /var/cache/apk/*

# ðŸ‘¤ åˆ›å»ºéžç‰¹æƒç”¨æˆ·
RUN addgroup -g 1001 -S appgroup && \
    adduser -u 1001 -S appuser -G appgroup

# ðŸ“ åˆ›å»ºå¿…è¦ç›®å½•
RUN mkdir -p /var/cache/nginx /var/run /var/log/nginx && \
    chown -R appuser:appgroup /var/cache/nginx /var/run /var/log/nginx /usr/share/nginx/html

# ðŸ”§ ä»Žnginxé…ç½®é˜¶æ®µå¤åˆ¶é…ç½®æ–‡ä»¶
COPY --from=nginx-config /etc/nginx/nginx.conf /etc/nginx/nginx.conf
COPY --from=nginx-config /etc/nginx/conf.d/default.conf /etc/nginx/conf.d/default.conf

# ðŸ“¦ ä»Žæž„å»ºé˜¶æ®µå¤åˆ¶é™æ€æ–‡ä»¶
COPY --from=builder --chown=appuser:appgroup /build/dist/ /usr/share/nginx/html/

# ðŸ”§ ä¿®å¤æƒé™
RUN chmod -R 755 /usr/share/nginx/html

# ðŸŒ è®¾ç½®çŽ¯å¢ƒå˜é‡
ENV NODE_ENV=production
ENV NGINX_WORKER_PROCESSES=auto
ENV NGINX_WORKER_CONNECTIONS=1024

# ðŸ”Œ æš´éœ²ç«¯å£
EXPOSE 80

# ðŸ‘¤ åˆ‡æ¢åˆ°éžç‰¹æƒç”¨æˆ·
USER appuser:appgroup

# ðŸ¥ å¥åº·æ£€æŸ¥
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:80/health || exit 1

# ðŸ·ï¸ é•œåƒæ ‡ç­¾
LABEL maintainer="hellocplusplus0" \
      app="v7-web" \
      version="latest" \
      architecture="podman" \
      description="V7 Web - SolidJS + Web v7 Architecture" \
      node.version="18" \
      nginx.version="1.25"

# ðŸš€ å¯åŠ¨å‘½ä»¤
CMD ["nginx", "-g", "daemon off;"]

# ðŸ“ æž„å»ºè¯´æ˜Ž
# 
# ðŸ—ï¸ æž„å»ºå‘½ä»¤:
#   podman build -t v7-web:latest -f Dockerfile .
# 
# ðŸš€ è¿è¡Œå‘½ä»¤:
#   podman run -d \
#     --name v7-web \
#     -p 80:80 \
#     -v ./logs:/var/log/nginx:Z \
#     v7-web:latest
# 
# ðŸ” é•œåƒä¿¡æ¯:
#   podman inspect v7-web:latest
# 
# ðŸ§ª æµ‹è¯•å¥åº·æ£€æŸ¥:
#   podman exec v7-web curl -f http://localhost:80/health
# 
# ðŸ“Š æ€§èƒ½ä¼˜åŒ–ç‰¹æ€§:
# - å¤šé˜¶æ®µæž„å»º (å‡å°æœ€ç»ˆé•œåƒå¤§å°)
# - Nginx é«˜æ€§èƒ½é…ç½®
# - Gzip åŽ‹ç¼©å¯ç”¨
# - é™æ€èµ„æºç¼“å­˜ä¼˜åŒ–
# - SPA è·¯ç”±æ”¯æŒ
# - ä¾èµ–ç¼“å­˜ä¼˜åŒ–
# 
# ðŸ”’ å®‰å…¨ç‰¹æ€§:
# - éžç‰¹æƒç”¨æˆ·è¿è¡Œ
# - å®‰å…¨å¤´é…ç½®
# - éšè—æ–‡ä»¶ä¿æŠ¤
# - Content Security Policy
# - å¥åº·æ£€æŸ¥å†…ç½® 