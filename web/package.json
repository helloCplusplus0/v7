{
  "name": "fmod-web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:clean": "rm -rf .vite && npm run dev",
    "dev:force": "rm -rf node_modules/.vite && npm run dev",
    "build": "tsc && vite build",
    "build:watch": "tsc && vite build --watch",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:ci": "vitest run --coverage --reporter=default --reporter=json --outputFile.json=./coverage/test-results.json",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --reporter=verbose slices/**/*_test.{ts,tsx} src/**/*_test.{ts,tsx}",
    "test:integration": "vitest run tests/integration",
    "test:contracts": "vitest run tests/contracts",
    "test:e2e": "vitest run tests/e2e",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:contracts && npm run test:e2e",
    "test:report": "vitest run --coverage --reporter=html",
    "test:slice": "vitest run --reporter=verbose",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write src",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\" \"slices/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\"",
    "slice:new": "node scripts/create-slice.js",
    "clean": "rm -rf dist node_modules/.vite",
    "typecheck": "tsc --noEmit",
    "type-check": "tsc --noEmit",
    "debug": "node debug-server.js",
    "proto:generate": "buf generate",
    "proto:lint": "buf lint",
    "proto:breaking": "buf breaking --against '../backend/proto'",
    "proto:format": "buf format -w",
    "proto:clean": "rm -rf src/generated && mkdir -p src/generated",
    "proto:full": "npm run proto:clean && npm run proto:lint && npm run proto:generate && npm run type-check"
  },
  "dependencies": {
    "@bufbuild/protobuf": "1.10.1",
    "@connectrpc/connect": "1.6.1",
    "@connectrpc/connect-web": "1.6.1",
    "@connectrpc/connect-query": "1.4.2",
    "@connectrpc/protoc-gen-connect-es": "1.6.1",
    "@solidjs/router": "^0.13.6",
    "@solidjs/testing-library": "^0.8.10",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.6.1",
    "@types/google-protobuf": "^3.15.12",
    "@types/protobufjs": "^6.0.0",
    "google-protobuf": "^3.21.4",
    "protobufjs": "^7.5.3",
    "solid-js": "^1.9.7"
  },
  "devDependencies": {
    "@bufbuild/protoc-gen-es": "1.10.1",
    "@types/node": "^20.19.7",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-solid": "^0.14.5",
    "jsdom": "^25.0.1",
    "msw": "^2.10.4",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vite": "^5.4.19",
    "vite-plugin-solid": "^2.11.7",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
